---
import "../styles/styles.css";

interface Props {
  job?: { date: string; empresa: string; puesto: string; description: string; ruta: string; enlace:string };
}

// Validar si `job` está definido antes de desestructurar
const job = Astro.props.job || {
  date: "No disponible",
  empresa: "Sin título",
  puesto: "Sin puesto",
  description: "Sin descripción",
  ruta: "Sin ruta",
  enlace: "Sin enlace",
};
const { date, empresa, description, puesto, ruta, enlace } = job;
---

<li class="mb-10 ms-6 mt-4">
  <span class="absolute flex items-center justify-center w-10 h-10 bg-blue-100 rounded-full -start-5 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900">
      <img class="rounded-full shadow-lg" src={ruta} alt="Thomas Lean image"/>
  </span>
  <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-700 dark:border-gray-600">
      <div class="items-center justify-between mb-3 sm:flex">
          <time class="mb-1 text-xs font-normal text-gray-400 sm:order-last sm:mb-0">{date}</time>
          <div class="text-sm font-normal text-gray-500 lex dark:text-gray-300">{empresa} <br>
          <a href="#" class="font-semibold text-gray-900 dark:text-white hover:underline">{puesto}</a></div>
      </div>
      <div class="p-3 text-sm font-normal text-gray-500 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-600 dark:border-gray-500 dark:text-gray-300">{description}</div>
  </div>
</li>